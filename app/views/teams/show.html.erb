<% @opponents.each do |opponent| %>
<p><%= opponent.name %></p>
<% end %>

<h1>Offense</h1>
<ul class="group">
  <li class="table-name">Name</li>
  <li class="table-attribute">Position</li>
  <li class="table-attribute">Avg Fantasy Points Per Game</li>
</ul>
<% @team_players.each do |player| %>
<ul class="group">
  <li class="table-name"><a href="<%= player_url(player) %>"><%= player.name %></a></li>
  <li class="table-attribute"><%= player.position %></li>
  <li class="table-attribute"><%= player.average_fantasy_points.round(2) %></li>
</ul>
<% end %>

  
